<div class="container">

  <div class="show-title-ribbon">
    <div class="spacer"></div>
    <h1>Booking <%= @caddie.name %></h1>
    <div class="caddie-picture"><%= cl_image_tag @caddie.photo.key, height: 500, width: 400, crop: :fill %></div>
  </div>


  <div class="caddie-details-show">
    <div class="spacer"></div>

    <div class="owner-details-container">

      <div class="caddie-details-card">
        <img class="avatar owner-picture"  aria-haspopup="true" aria-expanded="false" src="https://picsum.photos/200" />
        <div class="owner-details-card">
          <p><%= @caddie.user.email %></p>
          <div class="review-stars">
            <% unless @caddie.user.rating.empty? %>
              <% @caddie.user.rating.first.times do %>
                <i class="fas fa-star"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="caddie-specs">
        <ul>
          <li>Wheels Number : <%= @caddie.wheels_number %></li>
          <li>Condition : <%= @caddie.condition %></li>
          <li>Capacity : <%= @caddie.capacity %></li>
        </ul>
        <p class="caddie-description-show mt-4"><strong>Description</strong></p>
        <p class="mt-3"><%= @caddie.description %> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni similique amet impedit totam voluptatem consequuntur odit a, saepe repudiandae! Amet perferendis impedit iste velit eos debitis dicta nesciunt accusantium officia.
        </p>
      </div>

    </div>

  </div>


  <div class="dates-calendar form-wrapper my-5">

    <h2>Select Your Dates</h2>

    <%= simple_form_for [@caddie, @booking] do |f| %>

      <div class="form-flexbox">
        <div>
          <%= f.input :start_date, as: :string, required: true, input_html: {# id:"range_start",
                                                                             class: "datepicker start-date form-control calendar-input"} %>
          <%= f.input :end_date, as: :string, required: true, input_html: {# id:"range_end",
                                                                           class: "datepicker end-date form-control calendar-input"} %>
          <%= f.input :price, as: :hidden, :input_html => { :value => @caddie.price } %>
        </div>
        <div class="booking-price-button">
          <p class="price-title">Price</p>
          <div class="booking-price">
            <p class="price-antoine" data-price="<%= @caddie.price %>"><%= @caddie.price %></p>$
          </div>
          <%= f.button :submit, "Book Now", class: "btn btn-primary create-booking" %>
        </div>
      </div>

    <% end %>

  </div>



</div>



