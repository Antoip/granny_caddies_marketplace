            <h2><%= caddy.name %></h2>
          </div>
          <div class="home-card-text">
            <p>Condition : <%=caddy.condition %></p>
            <p> Nombre de roues : <%= caddy.wheels_number %></p>
            <p> Capacity : <%= caddy.capacity %></p>
            <p class="price-mf" style="padding: 2px 7px"> <strong> <%= caddy.price %>â‚¬</strong></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 500px; height: 100vh; position: sticky; top:0; background-size: cover; overflow: hidden;">
  <img src="https://planmetro.paris/wp-content/uploads/2015/10/paris-map.jpg" alt="map temporaire">
  </div>
</div>
