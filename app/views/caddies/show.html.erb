<div class="container">
  <div class="show-title-ribbon">
    <div class="spacer"></div>
    <h1><%= @caddie.name %></h1>
    <div class="caddie-picture"><img src="https://www.jardinetsaisons.fr/1141-thickbox_default/poussette-de-marche-isotherme-6-roues.jpg" alt=""></div>
  </div>


  <div class="caddie-details-show">
    <div class="spacer"></div>

    <div class="owner-details-container">
      <div class="caddie-details-card">
        <img class="avatar owner-picture"  aria-haspopup="true" aria-expanded="false" src="https://picsum.photos/200" />
        <div class="owner-details-card">
          <p><%= @caddie.user.email %></p>
          <p>User Rating</p>
        </div>
      </div>

      <div class="caddie-specs">
        <ul>
          <li>Wheels Number : <%= @caddie.wheels_number %></li>
          <li>Condition : <%= @caddie.condition %></li>
          <li>Capacity : <%= @caddie.capacity %></li>
        </ul>
        <p style="font-size: 18px;" class="mt-4"><strong>Description</strong></p>
        <p class="mt-3"><%= @caddie.description %> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni similique amet impedit totam voluptatem consequuntur odit a, saepe repudiandae! Amet perferendis impedit iste velit eos debitis dicta nesciunt accusantium officia.</p>
      </div>
    </div>
  </div>
  <div class="calendar-action-buttons">
    <div class="btn btn-primary">Edit</div>
    <div class="btn btn-primary book-now">Book Now</div>
    <div class="btn btn-danger">Delete</div>
  </div>
  <div class="caddie-booking-reviews">
    <h3>Reviews</h3>
    <div class="review-container">
      <% if @caddie.reviews.empty? %>
        <p>Il n'y a pas de review pour cet article</p>
      <% else %>
        <% @caddie.reviews.each do |review| %>
          <div>
            <%= review.rating %>
          </div>
          <div>
            <%= review.description %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
