  <div class="show-title-ribbon">
    <div class="spacer"></div>
    <h1><%= @caddie.name %></h1>
    <div class="caddie-picture"><%= cl_image_tag @caddie.photo.key, height: 500, width: 400, crop: :fill %></div>
  </div>

