  'https://images.unsplash.com/photo-1579626379295-2b3a2dd7cbc4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60',
  'https://images.unsplash.com/photo-1575075500178-c99ef905661a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60'] %>


  <div class="caddie-details-show">
    <div class="spacer"></div>
    <div class="owner-details-container">
      <div class="caddie-details-card">
        <%= cl_image_tag @caddie.user.photo.key, height: 60, width: 30, class: "avatar owner-picture" %>

        <div class="owner-details-card">
          <p><%= @caddie.user.email %></p>
          <div class="review-stars">
            <% unless @caddie.user.rating.empty? %>
              <% @caddie.user.rating.first.times do %>
                <i class="fas fa-star"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="caddie-specs">
        <ul>
          <li>Wheels Number : <%= @caddie.wheels_number %></li>
          <li>Condition : <%= @caddie.condition %></li>
          <li>Capacity : <%= @caddie.capacity %></li>
        </ul>
        <p style="font-size: 18px;" class="mt-4"><strong>Description</strong></p>
        <p class="mt-3"><%= @caddie.description %> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni similique amet impedit totam voluptatem consequuntur odit a, saepe repudiandae! Amet perferendis impedit iste velit eos debitis dicta nesciunt accusantium officia.
        </p>
      </div>
    </div>
  </div>
  <div class="calendar-action-buttons">
    <div class="btn btn-primary btn-lat" style="display:none;">Edit</div>
    <%= link_to new_caddy_booking_path(@caddie) do %>
      <div class="btn btn-primary book-now">Book Now</div>
    <% end %>
    <div class="btn btn-danger btn-lat" style="display:none;">Delete</div>
  </div>
  <div class="caddie-booking-reviews">
    <h3>Reviews</h3>
    <div class="review-container mt-4">
      <% if @caddie.reviews.empty? %>
        <p>Il n'y a pas de review pour cet article</p>
      <% else %>
        <% @caddie.reviews.each do |review| %>
          <div class="review-card">
            <div class="review-author">
              <img class="avatar owner-picture"  aria-haspopup=“true” aria-expanded=“false” src="<%=  arrayPhoto[rand(1..12)] %>" />
              <p class="owner-details-card"><%= review.booking.user.email %></p>
            </div>

            <div class="review-block">
              <div class="review-stars">
                <% review.rating.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
              </div>
              <p class="review-content"><%= review.description %></p>
            </div>
          </div>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
